{
  "name": "observer",
  "version": "1.0.0",
  "description": "This project allows users to log their astronomical observation sessions and store results in a form of graph and table data",
  "private": true,
  "main": "src/index.ts",
  "scripts": {
    "start:local": "cross-env NODE_ENV=local nodemon --watch 'src/**/*.*' --exec ts-node -r dotenv/config src/index.ts dotenv_config_path=.env.local",
    "migrate": "sequelize db:migrate --config src/db/conf.json --migrations-path src/db/migrations --env='local'",
    "migrate:reset": "sequelize db:migrate:undo --config src/db/conf.json --migrations-path src/db/migrations --env='local'",
    "seed": "sequelize db:seed:all --config src/db/conf.json --seeders-path src/db/seeders",
    "lint": "eslint .",
    "lint:fix": "eslint --fix",
    "format": "prettier --write \"./**/*.{js,ts,tsx,scss,md,json}\" --config .prettierrc"
  },
  "author": "Nazar Panchenko",
  "license": "ISC",
  "dependencies": {
    "@types/sequelize": "^4.28.14",
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^6.15.0",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^9.0.0",
    "mysql2": "^3.1.2",
    "nodemailer": "^6.9.1",
    "sequelize-typescript": "^2.1.5",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/crypto-js": "^4.1.1",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.14.2",
    "@types/nodemailer": "^6.4.7",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "sequelize-cli": "^6.6.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "winston": "^3.8.2"
  }
}
